{
  "name": "@eser/stack",
  "version": "0.8.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "pkg/@eser/*",
    "pkg/@cool/*",
    "test/apps/vanilla-app",
    "test/apps/jsx-runtime-app"
  ],
  "scripts": {
    "cleanup": "rm -rf ./etc/coverage/* ./etc/coverage.lcov ./deno.lock && deno task check:mod",
    "script:validate-licenses": "deno run --allow-read --allow-write ./pkg/@eser/codebase/validate-licenses.ts",
    "script:versions": "deno run --allow-net --allow-env --allow-read --allow-write ./pkg/@eser/codebase/versions.ts",
    "check:mod": "deno check ./pkg/@eser/*/mod.ts ./pkg/@cool/*/mod.ts",
    "doc:lint": "deno doc --lint ./pkg/@eser/*/mod.ts ./pkg/@cool/*/mod.ts",
    "doc:generate": "rm -rf ./docs/ && deno doc --name='eserstack' --output=./docs/ --html ./pkg/@eser/*/mod.ts ./pkg/@cool/*/mod.ts",
    "test": "deno test --allow-sys --allow-net --allow-env --allow-read --allow-write --allow-run --parallel --watch",
    "test:run": "deno test --allow-sys --allow-net --allow-env --allow-read --allow-write --allow-run --parallel --trace-leaks --coverage=./etc/coverage/",
    "test:coverage": "deno coverage ./etc/coverage/",
    "test:coverage-gen": "deno coverage ./etc/coverage --lcov --output=./etc/coverage.lcov",
    "validate:fix": "deno fmt && deno lint --fix && deno task script:validate-licenses --fix && deno task check:mod && deno task test:run",
    "validate": "deno fmt --check && deno lint && deno task script:validate-licenses && deno task check:mod && deno task test:run",
    "repl": "deno repl --unstable-temporal --allow-all --eval-file=./repl-init.ts",
    "container:build": "docker build -t eservm .",
    "container:run": "docker run --interactive --tty --rm eservm"
  }
}
